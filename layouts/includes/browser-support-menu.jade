script.
    var expand = function (cls) {
        var elems = document.getElementsByClassName(cls);
        for (var i = 0; i < elems.length; i++) {
            var obj = elems[i];
            if (obj.style.display == '')
                obj.style.display = 'none';
            else
                obj.style.display = '';
        }
        var collElems = document.getElementsByClassName("menu");
        for (var j=0; j<collElems.length;j++) {
            var obj = collElems[j];
            if (obj.className.indexOf(cls) == -1) {
                if (obj.style.display == '')
                    obj.style.display = 'none';
            }
        }
    }
aside.sidebar
    .sidebar__content
        .mobile-docs-header
            button.mobile-docs-toggle Docs Menu
        nav.sidebar__list
            h2: a(onclick="expand('gs')") Getting Started
            - var gsPages = [{title:"Step 1: Install PhoneGap", url:"getting-started/1-install-phonegap/desktop"},{title:"Step 2: Install Mobile App", url:"getting-started/2-install-mobile-app"},{title:"Step 3: Create Your App", url:"getting-started/3-create-your-app/desktop"},{title:"Step 4: Preview Your App", url:"getting-started/4-preview-your-app/desktop"},{title:"Step 5: Going Further", url:"getting-started/5-going-further"}]
            ul
                each page in gsPages
                    li: a(href="/#{page.url}" style="display:none " class="menu gs" class=document.url === page.url ? "current" : "")!=page.title
            h2: a(onclick="expand('tute')") Tutorials
            //h3: a(href="getting-started/1-install-phonegap/desktop") Developer Guides
            ul
                li: a(href="/develop/hello-world-explained" class="menu tute" style="display:none " class=document.url === 'develop/hello-world-explained' ? "current" : "") Hello World Explained
