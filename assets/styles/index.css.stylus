// Future adventurers: In an attempt to avoid building dragons, we will use [BEM](https://en.bem.info/) for css class naming and organization.

$header-bg = #27A1C5
$footer-bg = #003252
$content-maxwidth = 584px
$code-maxwidth = 858px
$light-weight = 300

// Mobile first and default mediaquery
//Base Styles
:root
  font-size 16px
body
  font-family 'adobe-clean', Helvetica, Arial, sans-serif
  color rgba(0, 0, 0, 0.8)
  line-height 1.75rem
  -webkit-font-smoothing antialiased
.bounds
  max-width 1240px
  position relative
  margin 0 auto
  padding 0 20px
  box-sizing border-box
a
  color #27a1c5
  text-decoration none
  &:hover
    text-decoration underline
h2
  text-transform uppercase
  margin 0 0 1rem
  font-size 1.125rem
  font-weight $light-weight
//Header
.site-header
  height 60px
  width 100%
  background rgba(255,255,255,0.95)
  display block
  margin-bottom 0
  .bounds
    display flex
    justify-content space-between
    align-items center
    height 100%
    padding 0 20px 0 10px
  a
    color #999
    &:hover
      text-decoration none
.site-header__logo
  h1
    // font-size 1.8rem
    font-size 1.0625rem
    margin 0
    padding 0
    font-weight normal
  img, svg
    vertical-align middle
    margin-right 0.125rem
    width 1.25rem
    height auto
  path
    fill currentColor
  span
    position relative
    top .125rem
.site-header__nav
  display block
  ul
    margin 0
    padding 0
    display flex
    flex-direction column
    list-style none

// Site Footer
.site-footer
  background $footer-bg
  color white
  a
    color white
    &:hover
      color white
  .bounds
    padding-top 50px
    padding-bottom 30px
  h2
    color #c4c4c4
  hr
    border 0
    height 1px
    background #001835
    margin 43px 0
.site-footer__lists
  display flex
  flex-wrap wrap
  max-width 520px
  justify-content space-between
  flex-grow 1
.site-footer__list
  display block
  min-width 170px
  margin 0 0 2.25rem
  ul
    list-style none
    margin 0
    padding 0
.site-footer__top
  display flex
  flex-wrap wrap
  justify-content space-between
.site-footer__messages
  max-width 400px
  order 0
  h2
    font-weight normal
    font-size 1.5rem
    margin-bottom 1.25rem
    a
      display block
      position relative
      color #27a1c5
      &:before
        content url('../images/arrow-right.svg')
        position relative
        left 0
        top 0
        width 1.5rem
        height 1.125rem
        margin-right .5rem
        transition left .2s ease
      &:hover
        color #27a1c5
        text-decoration none
        &:before
          left .3rem
.site-footer__message
  margin-bottom 3rem
.subscribe
  display flex
  flex-wrap wrap
  align-items center
  h2
    width 100%
.subscribe__description
  flex-grow 1
  max-width 556px
.subscribe__form
  flex-grow 1
  display flex
.subscribe__form__text-input
  background #64889B
  border none
  height 2.75rem
  box-sizing border-box
  padding .875rem 1rem
  border-radius 4px
  vertical-align top
  flex-grow 1
  margin-right 10px
  &::placeholder
    color #003351
.subscribe__form__submit
  text-transform uppercase
  font-size 1.0625rem
  height 2.75rem
  box-sizing border-box
  padding .875rem 1rem
  border-radius 4px
  background #1BA1C7
  border none
  vertical-align top
.site-footer__copyright
  font-size .75rem
  line-height .875rem
  a, a:hover
    text-decoration underline
// Main Content
main
  .bounds
    display flex
    align-items stretch
    height 100%
    width 100%
    margin-bottom 30px
    box-sizing border-box
    padding-top 55px
.content
  margin 0 auto
  background #FFF
  h1,h2,h3,h4,h5,p,li
    max-width $content-maxwidth
  img
    max-width 100%
    height auto
  .mobile-image
    max-width 50%
    position relative
    margin-left auto
    margin-right auto
    display block
.tabs
  border-bottom 1px solid #A0A0A0
  font-size 1.5rem
  font-weight bold
  ul
    list-style none
    margin 0
    padding 0
  .tabs__item
    display inline-block
    &--current
      position relative
      top 1px
      margin 0 65px 0 0
      display inline-block
      padding-bottom 12px
      border-bottom 2px solid #232323
    a
      position relative
      top 1px
      margin 0 65px 0 0
      padding-bottom 10px
      color #999
      &:hover
        text-decoration none
        border-bottom 2px solid #999

// Content Elements
$alert
  max-width $content-maxwidth
  box-sizing border-box
  padding 15px 20px 10px
  border-radius 4px
  margin 10px 0
.alert--warning
  background rgba(242,180,43,0.2)
  @extends $alert
.alert--info
  background rgba(21,72,142,0.1)
  @extends $alert
.alert--tip
  background rgba(21, 203, 51, 0.16)
  @extends $alert
article.page
  margin-bottom 4rem
  h2
    font-size 1.5rem
.next-step
  display block
  border 2px solid #C4C4C4
  height 100px
  font-size 1.5rem
  font-weight $light-weight
  border-radius 5px
  display flex
  flex-align center
  .label
    color white
    background #C4C4C4
    height 100%
    border-radius-left 5px
    display block
    box-sizing border-box
    font-size 2rem
    width 120px
    line-height 1.8rem
    padding 20px 20px 20px 28px
    margin-right 20px
  .next-block
    padding-top 20px
    &:hover
      text-decoration none
//Sidebar
.sidebar
  display block
  width 100%
  margin-right 50px
  position absolute
  background #2fa0c3
  left 0
  top 0
  max-height 45px
  overflow hidden
  transition max-height 0.5s ease-in-out, box-shadow 0.5s ease-in-out
  z-index 10
  box-shadow 0 2px 5px rgba(0,0,0,0)
  &.open
    max-height 400px
    box-shadow 0 3px 8px rgba(0,0,0,0.8)
.sidebar__content
  box-sizing border-box
.sidebar__list
  color #003252
  h1
    font-size 1.125rem
    font-weight bold
    box-sizing border-box
    padding 0 10px
  h2
    font-size 1.125rem
    margin-bottom .5rem
    font-weight regular
    box-sizing border-box
    padding 0 10px
    a
      color #1692b2
  h3
    font-size 0.875rem
    text-transform uppercase
    box-sizing border-box
    padding 0 10px
    a
      color #003351
  ul
    list-style none
    // Reduced to help tutorials sidebar page
    margin 0 0 1rem
    padding 0
    a
      color white
      display block
      width 100%
      box-sizing border-box
      padding 0 20px
      &.current
        background #40aed0
        border-top 1px solid #018bad
        border-bottom 1px solid #018bad
        box-shadow 0 1px 0 #56c0e2
.mobile-docs-header
  display block
  height 45px
  padding 7px 10px
  box-sizing border-box
  text-align right
.mobile-docs-toggle
  background transparent
  border 1px solid white
  height 30px
  color white
  font-size 1rem
  border-radius 4px
  text-align center
  padding 0 13px
  outline none
.open .mobile-docs-toggle
  background white
  color #2fa0c3
.video-wrapper
  position relative
  padding-bottom 56.25%
  padding-top 25px
  height 0
  max-width $code-maxwidth
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
code, kbd, pre, samp
  font-family "source-code-pro", monospace
  max-width $code-maxwidth
  overflow scroll
  border-radius 4px
@media (min-width: 820px)
  h2
    margin 0 0 1.5rem
  .site-header
    color white
    background $header-bg
    height 72px
    margin-bottom 50px
    a
      color #fff
    .bounds
      justify-content flex-start
  .site-header__nav
    display block
    ul
      flex-direction row
      li
        padding 10px
        margin 0 4px
  .site-header__logo
    margin-right: 40px;
    h1
      font-size 1.6875rem
      font-weight $light-weight
    span
      top .125rem
    img, svg
      margin-right: .75rem;
  .site-footer
    .bounds
      padding-top 70px
      padding-bottom 30px
  .site-footer__list
    margin 0 0 2.5rem
  .site-footer__messages
    order 2
    h2
      margin-bottom 1.25rem
  main
    .bounds
      display flex
      align-items stretch
      height 100%
      width 100%
      margin-bottom 50px
      padding-top 0
  .content
    margin 0
  //Sidebar
  .sidebar
    display block
    width 250px
    margin-right 50px
    position relative
    background none
    left none
    top none
    height auto
    overflow auto
    box-shadow none
    max-height none
    transition none
    &.open
      box-shadow none
      max-height none
  .sidebar__content
    width 250px
    border-right 1px solid #CCC
    padding-right 10px
    box-sizing border-box
  .sidebar__list
    h1
      font-size 1.125rem
      font-weight bold
      border-bottom 1px solid #999
    h2
      font-size 1.125rem
      margin-bottom .5rem
      border-bottom 1px solid #E7E7E7
      font-weight regular
      a
        color #1692b2
    h3
      font-size 0.875rem
      text-transform uppercase
      a
        color #003351
    ul
      list-style none
      // Reduced to help tutorials sidebar page
      margin 0 0 1rem
      padding 0 0 0 1rem
      a
        color #1692b2
        &.current
          color #ee3551
          background transparent
          border-top none
          border-bottom none
          box-shadow none
  .mobile-docs-header
    display none
  .next-step
    display block
    border 2px solid #C4C4C4
    height 180px
    font-size 2rem
    font-weight $light-weight
    border-radius 5px
    display flex
    flex-align center
    .label
      color white
      background #C4C4C4
      height 100%
      border-radius-left 5px
      display block
      box-sizing border-box
      font-size 4rem
      width 220px
      line-height 3rem
      padding 30px 20px 20px 42px
      margin-right 30px
    .next-block
      padding-top 50px
      &:hover
        text-decoration none
